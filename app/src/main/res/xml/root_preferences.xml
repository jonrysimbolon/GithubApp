<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/theme_header">

        <SwitchPreferenceCompat
            app:singleLineTitle="false"
            app:key="@string/notUseSystemKey"
            app:title="@string/avoid_use_system" />

        <SwitchPreferenceCompat
            app:dependency="@string/notUseSystemKey"
            app:key="@string/themeSettingKey"
            app:summaryOff="@string/theme_summary_off"
            app:summaryOn="@string/theme_summary_on"
            app:title="@string/theme_title" />

    </PreferenceCategory>

</PreferenceScreen>